# Application
APP_NAME=AI Gym Management
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/gym_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=gym_knowledge

# LangSmith (Agent Monitoring)
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=ai-gym-management
LANGSMITH_TRACING=False

# Agent Settings
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300
CHURN_PREDICTION_THRESHOLD=0.7
CHURN_LOOKBACK_DAYS=30
MAINTENANCE_PREDICTION_DAYS=14
EQUIPMENT_USAGE_THRESHOLD=1000

# Third-party integrations
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# Terra API (Wearables)
TERRA_API_KEY=your-terra-api-key
TERRA_DEV_ID=your-terra-dev-id
TERRA_SIGNING_SECRET=your-terra-signing-secret
